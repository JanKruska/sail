cuttingPlane
{
    type            surfaces;
    libs ("libsampling.so");
    // Output every
    writeControl    timeStep;
    writeInterval   1;

    surfaceFormat   vtk;
    fields          ( p U );

    interpolationScheme cellPoint;

    surfaces
    (
        yNormal
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            pointAndNormalDict
            {
                point       (0 0 0);
                normal    (0 1 0);
            }
            interpolate     true;
        }
    );
}


